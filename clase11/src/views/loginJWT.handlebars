{{!-- Formulario --}}
<h1 class="text-center my-5">Login JWT</h1> 
<form class="container my-5"  onsubmit="loginJWT(event)">
    {{#if error}}
    <label class="form-control bg-warning text-black fw-bold" id="idError">{{mensajeError}}</label>
    {{/if}} 
       
    <div class="form-group row my-2">
        <label class="col-sm-2 col-form-label" for="email">Email</label>
        <div class="col-sm-10">
            <input type="text" id="idemail" class="form-control" name="email" value="" ></input>
        </div>
    </div>
    
    <div class="form-group row my-2">
        <label class="col-sm-2 col-form-label" for="password">Password</label>
        <div class="col-sm-10">
            <input type="password" id="idpassword" class="form-control" name="password" value="" ></input>
        </div>
    </div>

    <button class="btn btn-primary m-4" id="btnLogin" type="submit">Login</button>
   
    
</form>

<div class="container my-5">
    <div class="row">
        <div id="botones" className="col-md-12">
            <button class="w-15 btn btn-danger" id="btnInfoUsuario" onclick="obtenerUsuarioLogueado()">Perfil Usuario con Local Storage</button>
        </div>

        <div class="row my-2">
        <div id="botones" className="col-md-12">
            <button class="w-15 btn btn-primary" id="btnLoginCookie" onclick="loginJWTCookie()">Login con Cookie</button>
            <button class="w-15 btn btn-danger" id="btnInfoUsuarioCookie" onclick="obtenerUsuarioLogueadoCookie()">Perfil Usuario con Cookie</button>
        </div>
    </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/loginJWT.js"></script>